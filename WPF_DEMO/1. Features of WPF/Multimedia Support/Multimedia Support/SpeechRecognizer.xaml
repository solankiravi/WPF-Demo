<Window x:Class="Multimedia_Support.SpeechRecognizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multimedia_Support"
        mc:Ignorable="d"
        Title="SpeechRecognizer" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="messageTextBox"
            MinHeight="50" MinWidth="400" HorizontalAlignment="Center" TextChanged="messageTextBox_TextChanged"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="5">
            <Button Content="Speak"  Click="Button_Click" Margin="5" Name="speakbtn"/>
            <TextBlock Name="status_text"
                Text="No input text"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="50,0,0,0"/>

            
        </StackPanel>
       
    </Grid>
</Window>
